{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "shortDescription": {
      "type": "richtext"
    },
    "longDescription": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "feathers",
        "windowVases",
        "windowPanels",
        "lightCatchers",
        "placesOfInspiration"
      ]
    },
    "colorOptions": {
      "type": "enumeration",
      "enum": [
        "yes",
        "no"
      ]
    },
    "thumbnails": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "colorChoices": {
      "type": "customField",
      "options": [
        "Red",
        "Orange",
        "Yellow",
        "Green",
        "Blue",
        "Purple",
        "Neutral",
        "Warm",
        "Cool",
        "Bright",
        "Soft"
      ],
      "customField": "plugin::multi-select.multi-select"
    }
  }
}
